<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Sign Up</title>
  </head>
  <body>
    <%= form_for :user, url: '/users' do |f| %>
      Name: <%= f.text_field :name %>
      Height: <%= f.text_field :height %>
      Happiness <%= f.text_field :happiness %>
      Nausea <%= f.text_field :nausea %>
      Tickets <%= f.text_field :tickets %>
      Password <%= f.text_field :password %>
      Password Confirmation <%= f.text_field :password_confirmation %>
      <%= f.submit "Create User" %>
    <% end %>
  </body>
</html>
